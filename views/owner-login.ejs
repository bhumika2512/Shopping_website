<%- include('./partials/header') %>
    <div class="w-full min-h-screen flex flex-col md:flex-row px-5 md:px-20">
        <!-- Form Section -->
        <div class="w-full md:w-1/2 flex items-center justify-center min-h-[50vh] md:min-h-screen">
            <div class="w-full md:w-[50%] px-5 md:px-0">
                <h4 class="text-2xl md:text-3xl capitalize mb-5">Admin Access</h4>
                <form action="/create" method="post">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password">
                    <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white w-full md:w-auto" type="submit" value="Login">
                </form>
            </div>
        </div>
        
        <!-- Image Section -->
        <div class="w-full md:w-[45%] flex items-center justify-center min-h-[50vh] md:h-screen bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1604176424472-17cd740f74e9?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzR8fGJhZ3xlbnwwfHwwfHx8MA%3D%3D');">
        </div>
    </div>
