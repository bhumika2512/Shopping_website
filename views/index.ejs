<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-5 md:px-20">
    <!-- Registration Section -->
    <div class="w-full md:w-1/2 flex items-center justify-center min-h-[50vh] md:h-screen">
        <div class="w-full px-5 py-10 mt-20 md:px-10">
            <h3 class="text-2xl  md:text-4xl mb-3">Welcome to<span class="text-blue-400 font-semibold"> SCATCH</span></h3>
            <h4 class="text-xl md:text-2xl mb-5">Create Your Account</h4>
            <form action="/users/register" method="post" autocomplete="off">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="text" placeholder="Full Name" name="fullname">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white w-full md:w-auto" type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login Section -->
    <div class="w-full md:w-1/2 flex items-center justify-center min-h-[50vh] md:h-screen">
        <div class="w-full px-5 md:px-10">
            <h4 class="text-xl md:text-2xl mb-5">LOGIN</h4>
            <form action="/users/login" method="post" autocomplete="off">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white w-full md:w-auto" type="submit" value="LogIn">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>