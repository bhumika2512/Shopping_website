<%- include('./partials/header') %>
<% if (success.length>0){%>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%=success%>
        </span>
    </div>
<%}%>

<div class="min-h-screen flex flex-col">
    <div class="container mx-auto px-5 md:px-10 py-10 md:py-20 flex flex-col md:flex-row flex-grow">
        <!-- Sidebar -->
        <div class="w-full md:w-[25%] flex flex-col items-start mt-10 md:mt-20 text-base md:text-xl">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Create New Product</a>
            </div>
        </div>

        <!-- Main Form Section -->
        <main class="w-full md:w-3/4 bg-white p-5 md:p-8 shadow md:ml-4 mt-8 md:mt-0">
            <h2 class="text-2xl font-bold mb-4">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <!-- Product Details Section -->
                <div class="mb-6">
                    <h3 class="text-xl font-semibold mb-2">Product Details</h3>
                    <div class="mb-4 text-base md:text-lg">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-base md:text-lg">
                        <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full">
                        <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full">
                        <input name="discount" type="text" placeholder="Discount Price" class="border p-2 rounded w-full">
                    </div>
                </div>

                <!-- Panel Details Section -->
                <div>
                    <h3 class="text-xl font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-base md:text-lg">
                        <input name="bgcolor" type="text" placeholder="Background Color" class="border p-2 rounded w-full">
                        <input name="panelcolor" type="text" placeholder="Panel Color" class="border p-2 rounded w-full">
                        <input name="textcolor" type="text" placeholder="Text Color" class="border p-2 rounded w-full">
                    </div>
                </div>

                <!-- Submit Button -->
                <input class="px-5 py-3 rounded mt-4 bg-blue-500 text-white text-base md:text-xl w-full md:w-auto" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
