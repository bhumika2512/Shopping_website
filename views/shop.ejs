<%- include('./partials/header') %>
<% if (success.length>0){%>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%=success%>
        </span>
    </div>
<%}%>

<div class="w-full h-auto flex flex-col md:flex-row items-start px-5 md:px-10 lg:px-20 py-10 mt-10">
    <div class="w-full md:w-[25%] flex flex-col items-start mt-10 mt-0">
        <div class="flex items-center gap-2 text-base md:text-lg mb-5">
            <h3>Sort By</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        <!-- Navigation Links -->
        <div class="flex flex-col text-base md:text-lg mb-10">
            <a class="block w-fit mb-2" href="">New Collections</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>

        <!-- Filters -->
        <div class="text-base md:text-lg">
            <h3 class="mb-2">Filter by :</h3>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>

    <!-- Product Section -->
    
    <div class="w-full md:w-[75%] flex flex-wrap gap-5 h-auto py-10">
        <!-- Product Card -->
        <% products.forEach(function(product){ %>
        <div class="w-full sm:w-1/2 lg:w-1/3 xl:w-1/4">
            <div class="w-full h-52 flex items-center justify-center bg-[<%= product.panelcolor %>]">
                <img class="h-[10rem] md:h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="bag">
            </div> 
            <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                
                
                
                <div>
                    <h3 class="text-base md:text-xl"><%= product.name %></h3>
                    <h4 class="text-sm md:text-lg">â‚¹ <%= product.price %></h4>
                </div>
                <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%=product.id%>">
                    <i class="ri-add-line text-black text-xl"></i>
                </a>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<%- include('./partials/footer') %>


   