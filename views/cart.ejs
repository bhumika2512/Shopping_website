<%- include('./partials/header') %>
    <%user.cart.forEach(function(item){%>
        <div class="w-full h-auto flex flex-col md:flex-row items-start px-5 md:px-10 lg:px-20 py-10 gap-5 md:gap-10">
            <!-- Left Section -->
            <div class="w-full md:w-[30%] rounded-md overflow-hidden py-10 md:py-16">
                <div class="w-full h-60 flex justify-center bg-[<%=item.bgcolor %>] md:h-80" >
                    <img class=" h-full md:h-full" src="data:image/jpeg;base64, <%= item.image.toString('base64')%>" alt="bag">
                </div>
                <div class="w-full flex justify-between px-2 py-4 bg-[<%= item.panelcolor%>]">
                    <h3 class="text-lg md:text-2xl">Clinge Bag</h3>
                    <div class="flex items-center gap-2">
                        <i class="w-6 h-6 md:w-7 md:h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-6 h-6 md:w-7 md:h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center justify-between px-2 py-3">
                    <h4 class="text-sm md:text-lg">Net Total</h4>
                    <h3 class="text-sm md:text-lg"><%= bill%></h3>
                </div>
            </div>
    
            <!-- Right Section -->
            <div class="w-full md:w-[70%] py-10 md:py-16 flex flex-col">
                <h3 class="text-lg md:text-2xl">Price Breakdown</h3>
                <div class="px-2 md:px-5 mt-5 flex flex-col">
                    <div class="flex mt-2">
                        <h4 class="w-1/2 md:w-1/3 text-sm md:text-base">Total MRP</h4>
                        <h4 class="text-sm md:text-base">₹ <%=item.price%></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/2 md:w-1/3 text-sm md:text-base">Discount on MRP</h4>
                        <h4 class="text-sm md:text-base">₹ <%=Number(item.discount)%></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/2 md:w-1/3 text-sm md:text-base">Platform Fee</h4>
                        <h4 class="text-sm md:text-base">₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/2 md:w-1/3 text-sm md:text-base">Shipping Fee</h4>
                        <h4 class="text-sm md:text-base">FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5 px-2 md:px-5">
                    <h3 class="w-1/2 md:w-1/3 text-lg md:text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-lg md:text-xl text-green-600"><%=bill%></h3>
                </div>
                <form action="" class="mt-4 px-2 md:px-5">
                    <input class="px-5 rounded-md py-3 mt-2 bg-black text-white w-full md:w-auto" type="submit" value="Place Order">
                </form>
            </div>
        </div>
    <%})%>
<%- include('./partials/footer') %>
